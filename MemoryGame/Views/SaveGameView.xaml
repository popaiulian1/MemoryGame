<UserControl x:Class="MemoryGame.Views.SaveGameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MemoryGame.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid Background="#ecf0f1">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" 
                Background="White" 
                BorderBrush="#bdc3c7" 
                BorderThickness="0,0,0,1" 
                Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="Saved Games" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           VerticalAlignment="Center"/>
                
                <Button Grid.Column="1" 
                        Content="Refresh" 
                        Command="{Binding RefreshSavesCommand}" 
                        Padding="10,5" 
                        Background="#3498db" 
                        Foreground="White" 
                        BorderThickness="0"/>
            </Grid>
        </Border>
        
        <!-- Content Area -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>
            
            <!-- Saved Games List -->
            <Border Grid.Column="0" 
                    Background="White" 
                    BorderBrush="#bdc3c7" 
                    BorderThickness="1" 
                    Margin="0,0,10,0" 
                    CornerRadius="5">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                               Text="Your Saved Games" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Margin="0,0,0,15"/>
                    
                    <ListView Grid.Row="1" 
                              ItemsSource="{Binding SavedGames}" 
                              SelectedItem="{Binding SelectedSave}" 
                              BorderThickness="0" 
                              Background="Transparent">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Date" Width="150">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding SavedAt, StringFormat={}{0:MMM dd, yyyy HH:mm}}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                
                                <GridViewColumn Header="Board Size" Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock>
                                                <Run Text="{Binding BoardWidth}"/>
                                                <Run Text="x"/>
                                                <Run Text="{Binding BoardHeight}"/>
                                            </TextBlock>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                
                                <GridViewColumn Header="Category" 
                                                DisplayMemberBinding="{Binding CategoryName}" 
                                                Width="120"/>
                                
                                <GridViewColumn Header="Time Remaining" Width="120">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding TimeRemaining, StringFormat=mm\\:ss}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </Border>
            
            <!-- Action Panel -->
            <Border Grid.Column="1" 
                    Background="White" 
                    BorderBrush="#bdc3c7" 
                    BorderThickness="1" 
                    Margin="10,0,0,0" 
                    CornerRadius="5">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                               Text="Game Details" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Margin="0,0,0,15"/>
                    
                    <StackPanel Grid.Row="1" 
                                Visibility="{Binding SelectedSave, Converter={StaticResource NullToVisibilityConverter}}">
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                       Text="Saved On:" 
                                       FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="1" 
                                       Text="{Binding SelectedSave.SavedAt, StringFormat={}{0:MMM dd, yyyy HH:mm}}"/>
                        </Grid>
                        
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                       Text="Board Size:" 
                                       FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="1">
                                <Run Text="{Binding SelectedSave.BoardWidth}"/>
                                <Run Text="x"/>
                                <Run Text="{Binding SelectedSave.BoardHeight}"/>
                            </TextBlock>
                        </Grid>
                        
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                       Text="Category:" 
                                       FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="1" 
                                       Text="{Binding SelectedSave.CategoryName}"/>
                        </Grid>
                        
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                       Text="Time Remaining:" 
                                       FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="1" 
                                       Text="{Binding SelectedSave.TimeRemaining, StringFormat=mm\\:ss}"/>
                        </Grid>
                    </StackPanel>
                    
                    <TextBlock Grid.Row="1" 
                               Text="No game selected" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center" 
                               Foreground="#7f8c8d" 
                               Visibility="{Binding SelectedSave, Converter={StaticResource InverseNullToVisibilityConverter}}"/>
                    
                    <StackPanel Grid.Row="2" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                Margin="0,15,0,0">
                        <Button Content="Load Game" 
                                Command="{Binding LoadGameCommand}" 
                                Padding="10,5" 
                                Margin="0,0,10,0" 
                                Background="#2ecc71" 
                                Foreground="White" 
                                BorderThickness="0"/>
                        
                        <Button Content="Delete" 
                                Command="{Binding DeleteSaveCommand}" 
                                Padding="10,5" 
                                Background="#e74c3c" 
                                Foreground="White" 
                                BorderThickness="0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="White" 
                BorderBrush="#bdc3c7" 
                BorderThickness="0,1,0,0" 
                Padding="20,10">
            <TextBlock Text="{Binding StatusMessage}" 
                       VerticalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>