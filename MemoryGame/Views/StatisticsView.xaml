<UserControl x:Class="MemoryGame.Views.StatisticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MemoryGame.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid Background="#ecf0f1">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" 
                Background="White" 
                BorderBrush="#bdc3c7" 
                BorderThickness="0,0,0,1" 
                Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="Game Statistics" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Reset My Stats" 
                            Command="{Binding ResetStatsCommand}" 
                            Padding="10,5" 
                            Margin="0,0,10,0" 
                            Background="#e74c3c" 
                            Foreground="White" 
                            BorderThickness="0"/>
                    
                    <Button Content="Refresh" 
                            Command="{Binding RefreshStatsCommand}" 
                            Padding="10,5" 
                            Background="#3498db" 
                            Foreground="White" 
                            BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Content Area -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Personal Statistics -->
            <Border Grid.Column="0" 
                    Background="White" 
                    BorderBrush="#bdc3c7" 
                    BorderThickness="1" 
                    Margin="0,0,10,0" 
                    CornerRadius="5">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                               Text="Your Statistics" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Margin="0,0,0,15"/>
                    
                    <StackPanel Grid.Row="1">
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                       Text="Games Played:" 
                                       FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="1" 
                                       Text="{Binding CurrentUser.Statistics.GamesPlayed}"/>
                        </Grid>
                        
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                       Text="Games Won:" 
                                       FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="1" 
                                       Text="{Binding CurrentUser.Statistics.GamesWon}"/>
                        </Grid>
                        
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                       Text="Win Rate:" 
                                       FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="1">
                                <Run Text="{Binding CurrentUser.Statistics.GamesWon, Mode=OneWay}"/>
                                <Run Text="/"/>
                                <Run Text="{Binding CurrentUser.Statistics.GamesPlayed, Mode=OneWay}"/>
                                <Run Text=" ("/>
                                <Run Text="{Binding CurrentUser.Statistics.GamesPlayed, Converter={StaticResource WinRateConverter}, Mode=OneWay}"/>
                                <Run Text="%)"/>
                            </TextBlock>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Leaderboard -->
            <Border Grid.Column="1" 
                    Background="White" 
                    BorderBrush="#bdc3c7" 
                    BorderThickness="1" 
                    Margin="10,0,0,0" 
                    CornerRadius="5">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                               Text="Top Players" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Margin="0,0,0,15"/>
                    
                    <ListView Grid.Row="1" 
                              ItemsSource="{Binding TopPlayers}" 
                              BorderThickness="0" 
                              Background="Transparent">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Rank" Width="60">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListViewItem}}, Converter={StaticResource IndexConverter}}"
                                                       HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                
                                <GridViewColumn Header="Username" 
                                                DisplayMemberBinding="{Binding Username}" 
                                                Width="150"/>
                                
                                <GridViewColumn Header="Games Played" Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Statistics.GamesPlayed}"
                                                       HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                
                                <GridViewColumn Header="Win Rate" Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock HorizontalAlignment="Center">
                                                <Run Text="{Binding Statistics.GamesWon, Mode=OneWay}"/>
                                                <Run Text="/"/>
                                                <Run Text="{Binding Statistics.GamesPlayed, Mode=OneWay}"/>
                                                <Run Text=" ("/>
                                                <Run Text="{Binding Statistics.GamesPlayed, Converter={StaticResource WinRateConverter}, Mode=OneWay}"/>
                                                <Run Text="%)"/>
                                            </TextBlock>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="White" 
                BorderBrush="#bdc3c7" 
                BorderThickness="0,1,0,0" 
                Padding="20,10">
            <TextBlock Text="{Binding StatusMessage}" 
                       VerticalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>